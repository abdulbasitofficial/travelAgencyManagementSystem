
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="main">
    <div class="shop_top">
        <div class="container">
            <form action="@Url.Action("SignUp","Account")" method="post">
                <div class="register-top-grid">
                    <h3>PERSONAL INFORMATION</h3>
                    <div>
                        <span>
                            First Name
                            <label>*</label>
                        </span>
                        <input type="text" value="" name="AccountFName" required="">
                    </div>
                    <div>
                        <span>
                            Last Name
                            <label>*</label>
                        </span>
                        <input type="text" value="" name="AccountLName" required="">
                    </div>

                    <div>
                        <span>
                            Email Address
                            <label>*</label>
                        </span>
                        <input type="email" value="" name="AccountEmail" required="">
                    </div>
                    <div>
                        <span>
                            Password
                            <label>*</label>
                        </span>
                        <input type="password" value="" name="AccountPassword" required="">
                    </div>
                    <input type="submit" value="submit" class="btn btn-primary">
                </div>
                
            </form>
        </div>
    </div>
</div>

