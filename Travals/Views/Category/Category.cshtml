@model IEnumerable<Travals.Models.CategoryModel>

@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category_Name)
        </td>
        <td>
            @{
                String img64 = Convert.ToBase64String(item.Image);
                String img64Url = string.Format("data:image/" + item.Type + ";base64,{0}", img64);
                <img src="@img64Url" alt="Forest" style="height:50px;width:50px;border-radius:10px;">
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Category_ID}) 
        </td>
    </tr>
}

</table>
